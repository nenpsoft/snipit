<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="?attr/actionBarSize"
    android:layout_height="wrap_content"
    android:background="?colorSecondary"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ellipse_button"
        style="@style/annotation_image_button"
        app:srcCompat="@drawable/ic_shape_circle" />

    <ImageButton
        android:id="@+id/rectangle_button"
        style="@style/annotation_image_button"
        app:srcCompat="@drawable/ic_shape_square" />

    <ImageButton
        android:id="@+id/text_button"
        style="@style/annotation_image_button"
        app:srcCompat="@drawable/ic_shape_text" />

    <ImageButton
        android:id="@+id/arrow_button"
        style="@style/annotation_image_button"
        app:srcCompat="@drawable/ic_shape_arrow" />

    <ImageButton
        android:id="@+id/blurring_button"
        style="@style/annotation_image_button"
        app:srcCompat="@drawable/ic_shape_invisible" />
</LinearLayout>